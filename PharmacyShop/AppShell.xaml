<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PharmacyShop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PharmacyShop.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="PharmacyShop">

    <ShellContent Title="Overview" ContentTemplate="{DataTemplate local:MedicationOverviewPage}" Route="MedicationOverviewPage" />
    <ShellContent Title="Details" ContentTemplate="{DataTemplate local:MedicationDetailsPage}" Route="MedicationDetailsPage" />
    <ShellContent Title="Checkout" ContentTemplate="{DataTemplate local:CheckoutPage}" Route="CheckoutPage" />

</Shell>
